{
  "name": "ts-tslint-formatter",
  "version": "0.1.0",
  "description": "Formatter for TSLint Errors",
  "keywords": [
    "TypeScript",
    "TSLint",
    "formatter"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "*.md",
    "docs",
    "src",
    "dist"
  ],
  "author": "Jan-Andr√© Zinser",
  "repository": {
    "type": "git",
    "url": "https://github.com/zinserjan/ts-tslint-formatter"
  },
  "bugs": {
    "url": "https://github.com/zinserjan/ts-tslint-formatter/issues"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "start": "ts-node test/run.ts",
    "test": "jest",
    "format": "prettier --trailing-comma es5 --print-width 120 --write '{src,test}/**/*.ts'",
    "precommit": "lint-staged",
    "prepublish": "npm run build"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --trailing-comma es5 --print-width 120 --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/\\.tmp/",
      "/node_modules/",
      "/test/"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/jest": "^20.0.2",
    "@types/node": "^8.0.2",
    "husky": "^0.14.0",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.0",
    "prettier": "^1.4.4",
    "rimraf": "^2.6.1",
    "ts-jest": "^20.0.6",
    "ts-node": "^3.1.0",
    "tslint": "^5.4.3",
    "typescript": "^2.2.2"
  },
  "peerDependencies": {
    "tslint": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "es6-error": "^4.0.2",
    "normalize-path": "^2.1.1",
    "text-table": "^0.2.0"
  }
}
